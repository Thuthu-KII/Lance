<% layout('layout', { title: 'Applications', user: user }) %>

<h2>Applications</h2>
<p><a href="javascript:history.back()">← Back to jobs</a></p>

<table>
  <thead>
    <tr>
      <th>Freelancer</th>
      <th>CV</th>
      <th>Police Clearance</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% applications.forEach(app => { %>
      <tr>
        <td><%= app.freelancer.displayName %></td>
        <td>
          <% if (app.cvPath) { %>
            <a href="<%= app.cvPath %>" target="_blank">Download</a>
          <% } else { %>
            —
          <% } %>
        </td>
        <td>
          <% if (app.policeClearancePath) { %>
            <a href="<%= app.policeClearancePath %>" target="_blank">Download</a>
          <% } else { %>
            —
          <% } %>
        </td>
        <td><%= app.status %></td>
      </tr>
    <% }) %>
  </tbody>
</table>

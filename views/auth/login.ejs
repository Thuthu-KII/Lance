<!-- views/auth/login.ejs -->

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header bg-primary text-white text-center py-4">
          <h2 class="m-0"><i class="fas fa-sign-in-alt me-2"></i>Login</h2>
        </div>
        
        <div class="card-body p-4">
          <% if(typeof errors != 'undefined') { %>
            <% errors.forEach(function(error) { %>
              <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-circle me-2"></i> <%= error.message %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% }); %>
          <% } %>
          
          <% if(success_msg != '') { %>
            <div class="alert alert-success alert-dismissible fade show">
              <i class="fas fa-check-circle me-2"></i> <%= success_msg %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% } %>
          
          <% if(error_msg != '') { %>
            <div class="alert alert-danger alert-dismissible fade show">
              <i class="fas fa-exclamation-circle me-2"></i> <%= error_msg %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% } %>
          
          <!-- Google OAuth Button -->
          <div class="text-center mb-4">
            <p class="text-muted mb-4">Log in to access your account</p>
            <a href="/auth/google" class="btn btn-light btn-google btn-lg w-100 position-relative shadow-sm">
              <i class="fab fa-google google-icon position-absolute"></i>
              <span>Continue with Google</span>
            </a>
          </div>
          
          <!-- Divider -->
          <div class="divider d-flex align-items-center my-4">
            <span class="text-muted small text-uppercase mx-3">or</span>
          </div>
          
          <!-- Admin Toggle Button -->
          <div class="text-center mb-3">
            <button id="toggleAdminLogin" class="btn btn-sm btn-outline-secondary px-3">
              <i class="fas fa-user-shield me-2"></i>Admin Login
            </button>
          </div>
          
          <!-- Traditional Login Form (Hidden by Default) -->
          <div id="traditionalLoginForm" class="d-none">
            <form action="/auth/login" method="POST">
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <div class="input-group">
                  <span class="input-group-text">
                    <i class="fas fa-envelope"></i>
                  </span>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    class="form-control"
                    placeholder="Enter your email"
                    required
                  />
                </div>
              </div>
              
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <div class="input-group">
                  <span class="input-group-text">
                    <i class="fas fa-lock"></i>
                  </span>
                  <input
                    type="password"
                    id="password"
                    name="password"
                    class="form-control"
                    placeholder="Enter your password"
                    required
                  />
                  <button class="btn btn-outline-secondary toggle-password" type="button">
                    <i class="fas fa-eye"></i>
                  </button>
                </div>
              </div>
              
              <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="remember" id="remember">
                  <label class="form-check-label" for="remember">Remember me</label>
                </div>
                <a href="/auth/forgot-password" class="text-primary small">Forgot Password?</a>
              </div>
              
              <button type="submit" class="btn btn-primary w-100">
                <i class="fas fa-sign-in-alt me-2"></i>Log In
              </button>
            </form>
          </div>
        </div>
        
        <div class="card-footer text-center py-3 bg-light">
          <p class="mb-0">
            New to the platform?
            <a href="/auth/register" class="text-primary">Create an account</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Google Button Styling */
  .btn-google {
    border: 1px solid #dadce0;
    padding: 12px;
    color: #3c4043;
    font-weight: 500;
    transition: all 0.3s ease;
  }
  
  .btn-google:hover {
    background-color: #f8f9fa;
    box-shadow: 0 1px 3px rgba(60,64,67,0.3);
  }
  
  .google-icon {
    font-size: 18px;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    color: #4285F4;
  }
  
  /* Divider Styling */
  .divider {
    position: relative;
    text-align: center;
  }
  
  .divider::before,
  .divider::after {
    content: "";
    flex: 1;
    border-bottom: 1px solid #dee2e6;
  }
  
  /* Toggle Button Styling */
  #toggleAdminLogin {
    font-size: 0.85rem;
    transition: all 0.3s ease;
  }
  
  #toggleAdminLogin:hover {
    background-color: #e9ecef;
  }
  
  /* Subtle animation for form reveal */
  #traditionalLoginForm {
    transition: all 0.3s ease;
    overflow: hidden;
    max-height: 0;
  }
  
  #traditionalLoginForm.show {
    max-height: 400px;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Toggle traditional login form
    const toggleButton = document.getElementById('toggleAdminLogin');
    const loginForm = document.getElementById('traditionalLoginForm');
    
    toggleButton.addEventListener('click', function() {
      loginForm.classList.toggle('d-none');
      
      if (loginForm.classList.contains('d-none')) {
        toggleButton.innerHTML = '<i class="fas fa-user-shield me-2"></i>Admin Login';
        toggleButton.classList.remove('btn-secondary');
        toggleButton.classList.add('btn-outline-secondary');
      } else {
        toggleButton.innerHTML = '<i class="fas fa-times me-2"></i>Hide Admin Login';
        toggleButton.classList.remove('btn-outline-secondary');
        toggleButton.classList.add('btn-secondary');
      }
    });
    
    // Password visibility toggle
    const togglePasswordButtons = document.querySelectorAll('.toggle-password');
    
    togglePasswordButtons.forEach(button => {
      button.addEventListener('click', function() {
        const passwordInput = this.previousElementSibling;
        const icon = this.querySelector('i');
        
        if (passwordInput.type === 'password') {
          passwordInput.type = 'text';
          icon.classList.remove('fa-eye');
          icon.classList.add('fa-eye-slash');
        } else {
          passwordInput.type = 'password';
          icon.classList.remove('fa-eye-slash');
          icon.classList.add('fa-eye');
        }
      });
    });
  });
</script>
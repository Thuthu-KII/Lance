<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Sign Up</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">

  <!-- Main content wrapper -->
  <main class="flex-grow flex items-start justify-center pt-10">
    <section class="w-full max-w-md bg-white rounded-xl shadow-lg p-8">
      <!-- Role Selection -->
      <section id="role-selection" class="text-center">
          <h2 class="text-2xl font-bold text-blue-600 mb-6">What best describes your role?</h2>
          <section class="flex justify-center gap-4">
              <button onclick="selectRole('client')" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition">
                Client
              </button>
              <button onclick="selectRole('freelancer')" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition">
              Freelancer
              </button>
          </section>
      </section>

      <!-- Sign in Form (hidden by default) -->
      <section id="Sign-up-section" style="display: none;" class="mt-8">
          <h2 class="text-xl font-semibold text-gray-800 mb-4 text-center">
              Sign up as <em id="user-role" class="text-blue-600 font-bold"></em>
          </h2>
          <section class="flex flex-col gap-4">
              <input type="text" id="email" placeholder="Email" class="px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"/>
              <input type="password" id="password" placeholder="Password" class="px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"/>
              <input type ="password" id="confirm" placeholder="Confirm Password" class="px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"/>
              <button onclick="signUp()" class="mt-2 bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition">                
              Sign Up
              </button>
              <button onclick="signInWithGoogle()" class="flex items-center gap-2 bg-white text-gray-700 border px-4 py-2 rounded shadow hover:shadow-lg transition">
                <img src="https://developers.google.com/identity/images/g-logo.png" class="w-5 h-5" alt="Google logo" />
                <a href="/auth/google">Sign in with Google</a>
              </button>
              
          </section>
      </section>
    </section>
  </main>

  <!-- Sticky bottom section -->
  <footer class="bg-blue-600 text-white py-16 text-center">
    <h2 class="text-2xl font-bold">Already have an account with us?</h2>
    <a id="LogInButtonBtn" href="#">
        Log in here
    </a>
  </footer>

  <script src="/login.js"></script>
</body>
</html>
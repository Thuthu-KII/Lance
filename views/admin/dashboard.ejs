<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <div class="admin-container">
    <!-- Sidebar -->
    <aside class="admin-sidebar">
      <h2>Admin Panel</h2>
      <nav>
        <ul>
          <li><a href="/admin/dashboard" class="active">Dashboard</a></li>
          <li><a href="/admin/users">User Management</a></li>
          <li><a href="/admin/jobs">Job Management</a></li>
          <li><a href="/admin/reports">Reports</a></li>
          <li><a href="/admin/verifications">Verifications</a></li>
        </ul>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="admin-main">
      <header class="admin-header">
        <h1>Admin Dashboard</h1>
        <div class="admin-actions">
          <a href="/logout" class="btn-logout">Logout</a>
        </div>
      </header>

      <!-- Stats Overview -->
      <section class="stats-overview">
        <div class="stat-card">
          <h3>Total Users</h3>
          <p><%= users.length %></p>
        </div>
        <div class="stat-card">
          <h3>Pending Jobs</h3>
          <p><%= jobs.filter(j => j.status === 'pending').length %></p>
        </div>
        <div class="stat-card">
          <h3>Open Reports</h3>
          <p><%= reports.length %></p>
        </div>
      </section>

      <!-- Recent Reports -->
      <section class="recent-reports">
        <h2>Recent Reports</h2>
        <% if (reports.length > 0) { %>
          <div class="report-list">
            <% reports.forEach(report => { %>
              <div class="report-card">
                <div class="report-header">
                  <span>Report #<%= report.id %></span>
                  <span class="badge-<%= report.status %>"><%= report.status %></span>
                </div>
                <div class="report-body">
                  <p><strong>Type:</strong> <%= report.report_type %></p>
                  <p><%= report.description %></p>
                </div>
                <div class="report-actions">
                  <form action="/admin/reports/<%= report.id %>/resolve" method="POST">
                    <input type="hidden" name="resolution" value="resolved">
                    <button type="submit" class="btn-resolve">Mark as Resolved</button>
                  </form>
                  <a href="/admin/reports/<%= report.id %>" class="btn-details">View Details</a>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <p>No pending reports</p>
        <% } %>
      </section>
    </main>
  </div>
</body>
</html>
<!-- views/auth/complete-profile-client.ejs -->

<section class="container mt-5">
  <section class="row">
    <section class="col-md-8 m-auto">
      <section class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-circle"></i> Complete Your Client Profile
        </h1>
        
        <% if(typeof errors != 'undefined') { %>
          <% errors.forEach(function(error) { %>
            <section class="alert alert-danger alert-dismissible fade show">
              <%= error.message %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </section>
          <% }); %>
        <% } %>
        
        <% if(success_msg != '') { %>
          <section class="alert alert-success alert-dismissible fade show">
            <%= success_msg %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </section>
        <% } %>
        
        <% if(error_msg != '') { %>
          <section class="alert alert-danger alert-dismissible fade show">
            <%= error_msg %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </section>
        <% } %>
        
        <p>Please provide the following information to complete your client profile:</p>
        
        <form action="/auth/complete-profile/client" method="POST" enctype="multipart/form-data">
          <section class="form-group">
            <label for="firstName">First Name*</label>
            <input
              type="text"
              id="firstName"
              name="firstName"
              class="form-control"
              placeholder="Enter First Name"
              value="<%= typeof firstName != 'undefined' ? firstName : user.first_name %>"
              required
            />
          </section>
          <section class="form-group">
            <label for="lastName">Last Name*</label>
            <input
              type="text"
              id="lastName"
              name="lastName"
              class="form-control"
              placeholder="Enter Last Name"
              value="<%= typeof lastName != 'undefined' ? lastName : user.last_name %>"
              required
            />
          </section>
          <section class="form-group">
            <label for="companyName">Company Name (optional)</label>
            <input
              type="text"
              id="companyName"
              name="companyName"
              class="form-control"
              placeholder="Enter Company Name"
              value="<%= typeof companyName != 'undefined' ? companyName : '' %>"
            />
          </section>
          <section class="form-group">
            <label for="phone">Phone Number (optional)</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="form-control"
              placeholder="Enter Phone Number"
              value="<%= typeof phone != 'undefined' ? phone : '' %>"
            />
          </section>
          <section class="form-group">
            <label for="address">Address (optional)</label>
            <textarea
              id="address"
              name="address"
              class="form-control"
              placeholder="Enter Address"
              rows="2"
            ><%= typeof address != 'undefined' ? address : '' %></textarea>
          </section>
          <button type="submit" class="btn btn-primary btn-block">
            Complete Profile
          </button>
        </form>
      </section>
    </section>
  </section>
</section>
